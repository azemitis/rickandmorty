{% extends 'layout.twig' %}

{% block content %}
    <div>
        <div class="grid grid-cols-2 gap-6 justify-items-center bg-gray-800 pt-20 pl-5 pb-10">
            {% for character in characters %}
                <div class="max-w-md w-full lg:max-w-full lg:flex pl-4">
                    <div class="w-96 h-54 lg:h-auto lg:w-64 flex-none bg-cover rounded-tl rounded-bl
                    text-center overflow-hidden shadow-lg"
                         style="background-image: url('{{ character.getImage() }}')">
                    </div>
                    <div class="bg-gray-700 w-96 h-54
                    rounded-tr rounded-br p-4 flex
                    flex-col justify-between leading-normal shadow-lg">
                        <div class="mb-8">
                            <a href="/character/{{ character.getId() }}"
                               target="_blank" class="text-2xl text-white font-bold">{{ character.getTitle() }}</a>
                            <ul class="text-l text-white">
                                {{ character.getStatusIcon() }} {{ character.getStatus() }} - {{ character.getSpecies() }}
                            </ul>
                            <ul class="text-gray-400">Last known location:</ul>
                            <a href="/location/{{ character.getLocationId() }}"
                               target="_blank" class="text-xl text-white">
                                {{ character.getLastKnownLocation() }}</a>
                            <ul class="text-gray-400">First seen in:</ul>
                            <a href="/episode/{{ character.getFirstSeenId() }}"
                               target="_blank" class="text-xl text-white">
                                {{ character.getFirstSeenIn() }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="flex justify-center bg-gray-800">
            <div class="text-white">
                {% if pagination.prev_url %}
                    <a href="{{ pagination.prev_url }}">Previous</a>
                {% endif %}

                {% if pagination.next_url %}
                    <a href="{{ pagination.next_url }}">Next</a>
                {% endif %}

            </div>
        </div>
    </div>

    <div class="bg-gray-800 text-white text-center flex justify-center">
        <span class="mt-20 mb-20">Characters. 2023</span>
    </div>
{% endblock %}
