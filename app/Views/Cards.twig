{% extends 'layout.twig' %}

{% block content %}
    <div class="flex pt-20 pb-10 items-center justify-center">
        <div class="bg-white p-8 rounded-lg" style="height: 25vh;">
            <h1 class="text-8xl text-gray-700 font-bold text-center">The Rick and Morty API</h1>
        </div>
    </div>

    <div class="flex space-x-4 mb-4 items-center justify-center">
        <form action="/search" method="GET" class="rounded-lg bg-gray-700 p-2 flex items-center">

            <label for="name" class="mx-2 text-white">Search character by name:</label>
            <input type="text" id="name" name="q" class="bg-white">
            <button type="submit" class="ml-2 bg-gray-500 hover:bg-gray-900 text-white font-bold py-2 px-4 rounded">
                Search
            </button>
        </form>

        <div class="rounded-lg bg-gray-700 p-2 flex items-center">
            <label for="location" class="mx-2 text-white">Select by location:</label>
            <select id="location" name="location" class="bg-white">
                <option value="">All locations</option>
                {% for location in locations %}
                    <option value="{{ location }}">{{ location }}</option>
                {% endfor %}
            </select>

        </div>
        <div class="rounded-lg bg-gray-700 p-2 flex items-center">
            <label for="episode" class="mx-2 text-white">Select by episode:</label>
            <select id="episode" name="episode" class="bg-white">
                <option value="" class="mx-2">All episodes</option>
                <!-- Add episodes -->
            </select>
        </div>
    </div>

    <div>
        <div class="grid grid-cols-2 gap-6 justify-items-center bg-gray-800 pt-20 pl-5 pb-10">
            {% for character in characters %}
                <div class="max-w-md w-full lg:max-w-full lg:flex pl-4">
                    <div class="w-96 h-54 lg:h-auto lg:w-64 flex-none bg-cover rounded-tl rounded-bl
                    text-center overflow-hidden shadow-lg"
                         style="background-image: url('{{ character.getImage() }}')">
                    </div>
                    <div class="bg-gray-700 w-96 h-54
                    rounded-tr rounded-br p-4 flex
                    flex-col justify-between leading-normal shadow-lg">
                        <div class="mb-8">
                            <a href="/character/{{ character.id }}"
                               target="_blank" class="text-2xl text-white font-bold">{{ character.title }}</a>
                            <ul class="text-l text-white"><span class="status_icon {{ character.status|lower }}"
                                 {% if character.status == 'Alive' %}style="background-color: green;"
                                 {% elseif character.status == 'Dead' %}style="background-color: red;"
                                 {% endif %}></span> {{ character.status }} - {{ character.species }}</ul>
                            <ul class="text-gray-400"> Last known location:</ul>
                            <a href="/location/{{ character.getLocationId() }}"
                               target="_blank" class="text-xl text-white">
                                {{ character.getLastKnownLocation() }}</a>
                            <ul class="text-gray-400">First seen in:</ul>
                            <a href="/episode/{{ character.getFirstSeenId() }}"
                               target="_blank" class="text-xl text-white">
                                {{ character.getFirstSeenIn() }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="flex justify-center bg-gray-800">
            <div class="text-white">
                {% if pagination.prev_url %}
                    <a href="{{ pagination.prev_url }}">Previous</a>
                {% endif %}

                {% if pagination.next_url %}
                    <a href="{{ pagination.next_url }}">Next</a>
                {% endif %}

            </div>
        </div>
    </div>

    <div class="bg-gray-800 text-white text-center flex justify-center">
        <span class="mt-20 mb-20">Characters. 2023</span>
    </div>
{% endblock %}
