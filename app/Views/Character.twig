{% extends 'layout.twig' %}

{% block content %}
    <div class="flex flex-col items-center justify-center h-screen">
        <div class="bg-white p-8 rounded-lg mb-10">
            <h1 class="text-8xl text-gray-700 font-bold text-center">{{ episodeName }}</h1>
        </div>

        {% if fetchMessage is not empty %}
            <div class="fetch-message font-bold">
                {{ fetchMessage }}
            </div>
        {% else %}
            <div class="fetch-message font-bold">
                Data from Cache
            </div>
        {% endif %}


        <div class="max-w-md w-full lg:max-w-full lg:flex pl-4">
            <div class="w-96 h-96 flex-none bg-cover rounded-tl rounded-bl
                text-center overflow-hidden shadow-lg"
                 style="background-image: url('{{ character.image }}'); height: 400px;">
            </div>
            <div class="pl-10 flex flex-col justify-center">
                <div class="mb-8 text-2xl">ID:
                    <span class="bg-gray-800 text-white rounded-lg px-2">
                            {{ character.id }}</span>
                    <div class="text-2xl mb-2">Status:
                        <span class="status_icon {{ character.status|lower }}"
                              {% if character.status == 'Alive' %}style="background-color: green;"
                              {% elseif character.status == 'Dead' %}style="background-color: red;"
                            {% endif %}></span>
                        <span class="bg-gray-800 text-white rounded-lg px-2">
                            {{ character.status }} - {{ character.species }}
                        </span>
                    </div>
                    <div class="text-2xl mb-2 rounded-lg">Last known location:
                        <span class="bg-gray-800 text-white rounded-lg px-2">
                            {{ character.lastKnownLocation }}</span>
                    </div>
                    <div class="text-2xl mb-2 rounded-lg">First seen in:
                        <span class="bg-gray-800 text-white rounded-lg px-2">
                            {{ character.firstSeenIn }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
